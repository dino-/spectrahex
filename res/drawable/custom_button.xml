<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/black"
                android:startColor="@color/gray50"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="@color/gray50" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/dustyOrange"
                android:startColor="@color/black"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="@color/gray50" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/gray50"
                android:startColor="@color/black"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="@color/gray50" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>
